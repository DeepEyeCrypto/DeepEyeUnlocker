<UserControl x:Class="DeepEye.UI.Modern.Views.ExpertCenterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DeepEye.UI.Modern.Views"
             xmlns:vm="clr-namespace:DeepEye.UI.Modern.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Margin="0,0,0,20">
            <TextBlock Text="{Binding Title}" Style="{StaticResource DeepEye.Text.Title}"/>
            <TextBlock Text="Advanced Automation &amp; Sequence Injection" Foreground="{StaticResource DeepEye.Brush.Accent}" FontSize="12"/>
        </StackPanel>

        <!-- Left: Presets -->
        <Border Grid.Row="1" Grid.Column="0" Background="#10FFFFFF" CornerRadius="8" Padding="15" Margin="0,0,10,0">
            <DockPanel>
                <TextBlock Text="AVAILABLE PRESETS" Foreground="Gray" FontSize="10" FontWeight="Bold" DockPanel.Dock="Top" Margin="0,0,0,10"/>
                <ItemsControl ItemsSource="{Binding Presets}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Content="{Binding Name}" 
                                    Command="{Binding DataContext.SelectPresetCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"
                                    Style="{StaticResource DeepEye.Button.Modern}"
                                    Margin="0,0,0,8" Height="40" HorizontalContentAlignment="Left" Padding="15,0"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </DockPanel>
        </Border>

        <!-- Right: Active Workflow Builder -->
        <Border Grid.Row="1" Grid.Column="1" Background="#0AFFFFFF" CornerRadius="8" Padding="15">
            <DockPanel>
                <Grid DockPanel.Dock="Top" Margin="0,0,0,10">
                    <TextBlock Text="WORKFLOW SEQUENCE" Foreground="Gray" FontSize="10" FontWeight="Bold" VerticalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <TextBlock Text="NEW STEP:" Foreground="Gray" VerticalAlignment="Center" Margin="0,0,10,0" FontSize="10"/>
                        <ComboBox ItemsSource="{Binding AvailableActions}" x:Name="ActionPicker" Width="100" Margin="0,0,5,0" SelectedIndex="0"/>
                        <Button Content="+ ADD" 
                                Command="{Binding AddStepCommand}" 
                                CommandParameter="{Binding SelectedItem, ElementName=ActionPicker}"
                                Style="{StaticResource DeepEye.Button.Modern}" Height="25" FontSize="9" Padding="10,0"/>
                    </StackPanel>
                </Grid>

                <ListView ItemsSource="{Binding WorkflowSteps}" Background="Transparent" BorderThickness="0" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#15FFFFFF" Margin="0,0,0,8" Padding="12" CornerRadius="6">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Controls -->
                                    <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="0,0,10,0">
                                        <Button Content="â–²" FontSize="8" Padding="2" Command="{Binding DataContext.MoveStepUpCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}" Background="Transparent" Foreground="Gray"/>
                                        <Button Content="â–¼" FontSize="8" Padding="2" Command="{Binding DataContext.MoveStepDownCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}" Background="Transparent" Foreground="Gray"/>
                                    </StackPanel>

                                    <TextBlock Grid.Column="1" Text="{Binding Action}" FontWeight="Bold" Foreground="{StaticResource DeepEye.Brush.Cyan}" VerticalAlignment="Center" Width="100"/>
                                    
                                    <TextBox Grid.Column="2" Text="{Binding Target, UpdateSourceTrigger=PropertyChanged}" 
                                             Tag="Target/Partition" Margin="5,0" Background="#10FFFFFF" Foreground="White" BorderThickness="0" Padding="5"/>
                                    
                                    <TextBox Grid.Column="3" Text="{Binding Parameter, UpdateSourceTrigger=PropertyChanged}" 
                                             Tag="Parameters" Margin="5,0" Background="#10FFFFFF" Foreground="{StaticResource DeepEye.Brush.Accent}" BorderThickness="0" Padding="5"/>

                                    <Button Grid.Column="4" Content="âœ•" 
                                            Command="{Binding DataContext.RemoveStepCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource DeepEye.Button.Modern}" Width="30" Height="25" Margin="5,0,0,0"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </DockPanel>
        </Border>

        <!-- Footer: Controls -->
        <Border Grid.Row="2" Grid.ColumnSpan="2" Background="#151525" Margin="0,15,0,0" Padding="15" CornerRadius="8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="STATUS" Foreground="Gray" FontSize="10"/>
                    <TextBlock Text="{Binding StatusMessage}" Foreground="White" FontWeight="Bold"/>
                    <ProgressBar Value="{Binding ProgressValue}" Height="4" Margin="0,10,20,0" Background="#10FFFFFF" Foreground="{StaticResource DeepEye.Brush.Cyan}"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,20,0">
                    <Button Content="â˜ï¸ NEXUS SYNC" 
                            Command="{Binding SyncToNexusCommand}" 
                            Style="{StaticResource DeepEye.Button.Modern}" 
                            Background="#1AFFFFFF" 
                            Height="45" Margin="0,0,10,0"
                            ToolTip="Sync workflow to the global Neural Nexus"/>
                    <TextBox x:Name="WorkflowName" Width="150" Height="35" VerticalContentAlignment="Center" Margin="0,0,10,0" Tag="Workflow Name" Padding="10,0"/>
                    <Button Content="ðŸ’¾ SAVE PRESET" 
                            Command="{Binding SaveWorkflowCommand}" 
                            CommandParameter="{Binding Text, ElementName=WorkflowName}"
                            Style="{StaticResource DeepEye.Button.Modern}" Height="45"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Content="STOP" Command="{Binding StopWorkflowCommand}" 
                            Visibility="{Binding IsExecuting, Converter={StaticResource BooleanToVisibilityConverter}}"
                            Style="{StaticResource DeepEye.Button.Modern}" Width="100" Height="45" Margin="0,0,10,0"/>
                    <Button Content="INITIALIZE SEQUENCE" Command="{Binding ExecuteWorkflowCommand}" 
                            IsEnabled="{Binding IsExecuting, Converter={StaticResource InverseBooleanConverter}}"
                            Style="{StaticResource DeepEye.Button.Modern}" Background="{StaticResource DeepEye.Brush.Cyan}" Width="200" Height="45"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
