<UserControl x:Class="DeepEye.UI.Modern.Views.DriverCenterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DeepEye.UI.Modern.Views"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000">
    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Title -->
            <RowDefinition Height="Auto"/> <!-- Status Bar -->
            <RowDefinition Height="*"/>    <!-- Main Content -->
        </Grid.RowDefinitions>

        <!-- 1. Header -->
        <DockPanel Grid.Row="0" Margin="0,0,0,25">
            <StackPanel>
                <TextBlock Text="{Binding Title}" Style="{StaticResource DeepEye.Text.GlowingTitle}"/>
                <TextBlock Text="One-Click Universal Multi-Brand Driver Deployment" Foreground="{StaticResource DeepEye.Brush.Accent}" FontSize="12" Opacity="0.8"/>
            </StackPanel>
            
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" VerticalAlignment="Center">
                <Button Content="REFRESH AUDIT" Command="{Binding RunAuditCommand}" 
                        IsEnabled="{Binding IsScanning, Converter={StaticResource InverseBooleanConverter}}"
                        Style="{StaticResource DeepEye.Button.Modern}" Width="150" Height="40" Margin="0,0,10,0" FontSize="11"/>
                <Button Content="INSTALL ALL DRIVERS" Command="{Binding InstallAllCommand}" 
                        IsEnabled="{Binding IsInstalling, Converter={StaticResource InverseBooleanConverter}}"
                        Style="{StaticResource DeepEye.Button.Modern}" Background="{StaticResource DeepEye.Brush.Cyan}" 
                        Width="200" Height="40" FontWeight="Bold" FontSize="11"/>
            </StackPanel>
        </DockPanel>

        <!-- 2. Status Banner -->
        <Border Grid.Row="1" Background="{StaticResource DeepEye.Brush.GlassGradient}" CornerRadius="8" Padding="15" Margin="0,0,0,20">
            <DockPanel>
                <ProgressBar DockPanel.Dock="Bottom" Height="2" IsIndeterminate="{Binding IsScanning}" 
                             Foreground="{StaticResource DeepEye.Brush.Cyan}" Background="#10FFFFFF" BorderThickness="0" Margin="0,10,0,0"
                             Visibility="{Binding IsScanning, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                <ProgressBar DockPanel.Dock="Bottom" Height="2" IsIndeterminate="{Binding IsInstalling}" 
                             Foreground="{StaticResource DeepEye.Brush.Orange}" Background="#10FFFFFF" BorderThickness="0" Margin="0,10,0,0"
                             Visibility="{Binding IsInstalling, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                
                <TextBlock Text="SYSTEM STATUS:" Foreground="{StaticResource DeepEye.Brush.Cyan}" FontWeight="Bold" FontSize="10" Margin="0,0,15,0" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding StatusMessage}" Foreground="White" FontSize="14" VerticalAlignment="Center"/>
            </DockPanel>
        </Border>

        <!-- 3. Main Content Split -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- Left: Driver Health -->
            <GroupBox Grid.Column="0" Header="DRIVER HEALTH REPOSITORY" Foreground="{StaticResource DeepEye.Brush.Cyan}" Margin="0,0,10,0" Style="{StaticResource DeepEye.GroupBox.Modern}">
                <ListView ItemsSource="{Binding InstalledDrivers}" Background="Transparent" BorderThickness="0" Margin="0,10,0,0">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#0DFFFFFF" Margin="0,0,0,8" Padding="12" CornerRadius="6">
                                <DockPanel>
                                    <Border DockPanel.Dock="Right" CornerRadius="4" Padding="8,4" VerticalAlignment="Center">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsInstalled}" Value="True">
                                                        <Setter Property="Background" Value="#3000FF00"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsInstalled}" Value="False">
                                                        <Setter Property="Background" Value="#30FF0000"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Text="{Binding IsInstalled, ConverterParameter='INSTALLED|MISSING', Converter={StaticResource BooleanToStringConverter}}" 
                                                   FontSize="9" FontWeight="Bold">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsInstalled}" Value="True">
                                                            <Setter Property="Foreground" Value="#00FF00"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsInstalled}" Value="False">
                                                            <Setter Property="Foreground" Value="Red"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Border>
                                    
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}" Foreground="White" FontWeight="SemiBold" FontSize="12"/>
                                        <TextBlock Text="{Binding StatusMessage}" Foreground="Gray" FontSize="10"/>
                                    </StackPanel>
                                </DockPanel>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </GroupBox>

            <!-- Right: Connected Hardware -->
            <GroupBox Grid.Column="1" Header="LIVE HARDWARE DISCOVERY" Foreground="{StaticResource DeepEye.Brush.Cyan}" Margin="10,0,0,0" Style="{StaticResource DeepEye.GroupBox.Modern}">
                <ListView ItemsSource="{Binding ConnectedDevices}" Background="Transparent" BorderThickness="0" Margin="0,10,0,0">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#15FFFFFF" Margin="0,0,0,10" Padding="18" CornerRadius="10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Hardware Icon -->
                                    <Border Grid.Column="0" Width="40" Height="40" Background="#2000F2FF" CornerRadius="20" Margin="0,0,20,0">
                                        <TextBlock Text="ðŸ“±" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>

                                    <!-- Identity -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding DeviceName}" Foreground="White" FontWeight="Bold" FontSize="14"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                            <TextBlock Text="{Binding VendorId}" Foreground="{StaticResource DeepEye.Brush.Cyan}" FontSize="10" FontWeight="Bold"/>
                                            <TextBlock Text=" : " Foreground="Gray" FontSize="10"/>
                                            <TextBlock Text="{Binding ProductId}" Foreground="{StaticResource DeepEye.Brush.Cyan}" FontSize="10" FontWeight="Bold"/>
                                            <TextBlock Text=" | " Foreground="Gray" FontSize="10" Margin="10,0"/>
                                            <TextBlock Text="{Binding InstancePath}" Foreground="Gray" FontSize="9" Opacity="0.6"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- Error Badge -->
                                    <Border Grid.Column="2" Visibility="{Binding HasDriverIssue, Converter={StaticResource BooleanToVisibilityConverter}}"
                                            Background="#40FF0000" CornerRadius="12" Padding="12,5" VerticalAlignment="Center">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="âš  DRIVER ERROR" Foreground="Red" FontSize="10" FontWeight="Bold"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </GroupBox>
        </Grid>
    </Grid>
</UserControl>
