<UserControl x:Class="DeepEye.UI.Modern.Views.AnalyticsCenterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DeepEye.UI.Modern.Views"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000">
    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Title -->
            <RowDefinition Height="Auto"/> <!-- Fleet Summary Cards -->
            <RowDefinition Height="*"/>    <!-- CVE Scanner -->
        </Grid.RowDefinitions>

        <!-- 1. Header with Glowing Title -->
        <StackPanel Grid.Row="0" Margin="0,0,0,25">
             <TextBlock Text="{Binding Title}" Style="{StaticResource DeepEye.Text.GlowingTitle}"/>
            <TextBlock Text="Enterprise Security Intelligence &amp; Vulnerability Audit" Foreground="{StaticResource DeepEye.Brush.Accent}" FontSize="12" Opacity="0.8" Margin="0,-5,0,0"/>
        </StackPanel>

        <!-- 2. Fleet Summary Cards with Glass Effect -->
        <Grid Grid.Row="1" Margin="0,0,0,25">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Managed Devices -->
            <Border Grid.Column="0" Background="{StaticResource DeepEye.Brush.GlassGradient}" BorderBrush="#30FFFFFF" BorderThickness="1" CornerRadius="12" Padding="20" Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="MANAGED DEVICES" Foreground="{StaticResource DeepEye.Brush.Cyan}" FontSize="10" FontWeight="Bold" Opacity="0.8"/>
                    <TextBlock Text="{Binding FleetSummary.ManagedDevicesCount}" Foreground="White" FontSize="32" FontWeight="Bold" Margin="0,5"/>
                    <TextBlock Text="TOTAL AUDITS" Foreground="#40FFFFFF" FontSize="9"/>
                </StackPanel>
            </Border>

            <!-- Health Alerts -->
            <Border Grid.Column="1" Background="{StaticResource DeepEye.Brush.GlassGradient}" BorderBrush="#30FFFFFF" BorderThickness="1" CornerRadius="12" Padding="20" Margin="10,0">
                <StackPanel>
                    <TextBlock Text="HEALTH ALERTS" Foreground="{StaticResource DeepEye.Brush.Orange}" FontSize="10" FontWeight="Bold" Opacity="0.8"/>
                    <TextBlock Text="{Binding FleetSummary.HealthAlertsCount}" Foreground="{StaticResource DeepEye.Brush.Orange}" FontSize="32" FontWeight="Bold" Margin="0,5"/>
                    <TextBlock Text="CRITICAL REVIEW" Foreground="#40FFFFFF" FontSize="9"/>
                </StackPanel>
            </Border>

            <!-- Critical CVEs -->
            <Border Grid.Column="2" Background="{StaticResource DeepEye.Brush.GlassGradient}" BorderBrush="#30FFFFFF" BorderThickness="1" CornerRadius="12" Padding="20" Margin="10,0">
                <StackPanel>
                    <TextBlock Text="CRITICAL CVEs" Foreground="Red" FontSize="10" FontWeight="Bold" Opacity="0.8"/>
                    <TextBlock Text="{Binding FleetSummary.CriticalCvesCount}" Foreground="Red" FontSize="32" FontWeight="Bold" Margin="0,5"/>
                    <TextBlock Text="SECURITY RISK" Foreground="#40FFFFFF" FontSize="9"/>
                </StackPanel>
            </Border>

            <!-- Risk Score -->
            <Border Grid.Column="3" Background="{StaticResource DeepEye.Brush.GlassGradient}" BorderBrush="{StaticResource DeepEye.Brush.Cyan}" BorderThickness="1" CornerRadius="12" Padding="20" Margin="10,0,0,0">
                <StackPanel>
                    <TextBlock Text="AVG RISK SCORE" Foreground="{StaticResource DeepEye.Brush.Cyan}" FontSize="10" FontWeight="Bold" Opacity="0.8"/>
                    <TextBlock Text="{Binding FleetSummary.AverageRiskScore, StringFormat={}{0:F1}/10}" Foreground="White" FontSize="32" FontWeight="Bold" Margin="0,5"/>
                    <TextBlock Text="FLEET INDEX" Foreground="#40FFFFFF" FontSize="9"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- 3. Individual CVE Scanner with Deep Contrast -->
        <Border Grid.Row="2" Background="#11FFFFFF" BorderBrush="#15FFFFFF" BorderThickness="1" CornerRadius="15" Padding="25">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <DockPanel Grid.Row="0" LastChildFill="False">
                    <StackPanel>
                        <TextBlock Text="VULNERABILITY PULSE SCANNER" Foreground="White" FontSize="18" FontWeight="Bold"/>
                        <TextBlock Text="{Binding ScanStatus}" Foreground="Gray" FontSize="12" Margin="0,4"/>
                    </StackPanel>
                    
                    <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                        <Button Content="EXPORT SECURITY REPORT" Command="{Binding ExportReportCommand}"
                                Style="{StaticResource DeepEye.Button.Modern}" BorderBrush="{StaticResource DeepEye.Brush.Orange}" 
                                Width="180" Height="45" FontSize="10" Margin="0,0,10,0"/>
                        <Button Content="INITIALIZE DEEP SCAN" Command="{Binding RunCveScanCommand}" 
                                IsEnabled="{Binding IsScanning, Converter={StaticResource InverseBooleanConverter}}"
                                Style="{StaticResource DeepEye.Button.Modern}" 
                                Background="{StaticResource DeepEye.Brush.Cyan}" Width="200" Height="45" FontSize="11" FontWeight="Bold"/>
                    </StackPanel>
                </DockPanel>

                <Separator Grid.Row="1" Background="#15FFFFFF" Margin="0,20"/>

                <!-- Results List with Animated Items -->
                <ListView Grid.Row="2" ItemsSource="{Binding Vulnerabilities}" Background="Transparent" BorderThickness="0" Margin="0,10,0,0"
                          VirtualizingStackPanel.IsVirtualizing="True" VirtualizingStackPanel.VirtualizationMode="Recycling">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#1AFFFFFF" BorderBrush="#10FFFFFF" BorderThickness="1" Margin="0,0,0,12" Padding="20" CornerRadius="8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="140"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Width="5" CornerRadius="2.5" Background="{StaticResource DeepEye.Brush.Cyan}" Margin="0,0,20,0">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Severity}" Value="Critical">
                                                        <Setter Property="Background" Value="Red"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Severity}" Value="High">
                                                        <Setter Property="Background" Value="Orange"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                    </Border>
                                    
                                    <StackPanel Grid.Column="1">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding Id}" FontWeight="Bold" Foreground="White" FontSize="15"/>
                                            <Border Background="#3300F2FF" Margin="15,0" Padding="10,3" CornerRadius="12">
                                                <TextBlock Text="{Binding AffectedComponent}" FontSize="10" Foreground="{StaticResource DeepEye.Brush.Cyan}" FontWeight="Bold"/>
                                            </Border>
                                        </StackPanel>
                                        <TextBlock Text="{Binding Description}" Foreground="#A0FFFFFF" FontSize="12" Margin="0,8,40,0" TextWrapping="Wrap" LineHeight="18"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right">
                                        <Border Padding="12,5" CornerRadius="4">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Severity}" Value="Critical">
                                                            <Setter Property="Background" Value="#30FF0000"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Severity}" Value="High">
                                                            <Setter Property="Background" Value="#30FF8C00"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock Text="{Binding Severity}" FontWeight="Bold" Foreground="White" FontSize="12" TextAlignment="Center"/>
                                        </Border>
                                        <TextBlock Text="{Binding FixedInPatch, StringFormat='MITIGATION: {0}'}" FontSize="10" Foreground="Gray" TextAlignment="Right" Margin="0,10,2,0"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Border>
    </Grid>
</UserControl>
