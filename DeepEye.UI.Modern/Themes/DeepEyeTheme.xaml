<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Colors -->
    <Color x:Key="DeepEye.Color.Obsidian">#0D1117</Color>
    <Color x:Key="DeepEye.Color.Grey.Deep">#161B22</Color>
    <Color x:Key="DeepEye.Color.Cyan">#00F2FF</Color>
    <Color x:Key="DeepEye.Color.Cyan.Dim">#8000F2FF</Color>
    <Color x:Key="DeepEye.Color.Orange">#FF8C00</Color>
    <Color x:Key="DeepEye.Color.White">#F0F6FC</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="DeepEye.Brush.Obsidian" Color="{StaticResource DeepEye.Color.Obsidian}" />
    <SolidColorBrush x:Key="DeepEye.Brush.Grey.Deep" Color="{StaticResource DeepEye.Color.Grey.Deep}" />
    <SolidColorBrush x:Key="DeepEye.Brush.Cyan" Color="{StaticResource DeepEye.Color.Cyan}" />
    <SolidColorBrush x:Key="DeepEye.Brush.Orange" Color="{StaticResource DeepEye.Color.Orange}" />
    <SolidColorBrush x:Key="DeepEye.Brush.White" Color="{StaticResource DeepEye.Color.White}" />

    <!-- Glass Effect -->
    <LinearGradientBrush x:Key="DeepEye.Brush.GlassGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#20FFFFFF" Offset="0" />
        <GradientStop Color="#05FFFFFF" Offset="1" />
    </LinearGradientBrush>

    <!-- Fonts -->
    <FontFamily x:Key="DeepEye.Font.Main">Segoe UI Semibold, Inter, Roboto</FontFamily>
    <FontFamily x:Key="DeepEye.Font.Mono">Consolas, Fira Code</FontFamily>

    <!-- Base Styles -->
    <Style x:Key="DeepEye.Text.Title" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource DeepEye.Brush.White}" />
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Margin" Value="0,0,0,10" />
    </Style>

    <Style x:Key="DeepEye.Text.Label" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource DeepEye.Brush.Cyan}" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Opacity" Value="0.8" />
    </Style>

    <!-- Modern Button -->
    <Style x:Key="DeepEye.Button.Modern" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource DeepEye.Brush.GlassGradient}" />
        <Setter Property="Foreground" Value="{StaticResource DeepEye.Brush.White}" />
        <Setter Property="Padding" Value="15,8" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BorderBrush" Value="{StaticResource DeepEye.Brush.Cyan}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Border" Background="Transparent"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetName="Border" 
                                                        Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                        To="#3000F2FF" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetName="Border" 
                                                        Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                        To="Transparent" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Hazard Button -->
    <Style x:Key="DeepEye.Button.Hazard" TargetType="Button" BasedOn="{StaticResource DeepEye.Button.Modern}">
        <Setter Property="Background" Value="{StaticResource DeepEye.Brush.Orange}" />
        <Setter Property="Foreground" Value="Black" />
        <Setter Property="BorderBrush" Value="#40000000" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="0">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Opacity" Value="0.9" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Opacity" Value="0.7" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Breathing Glow Style -->
    <Style x:Key="DeepEye.Text.GlowingTitle" TargetType="TextBlock" BasedOn="{StaticResource DeepEye.Text.Title}">
        <Style.Triggers>
            <EventTrigger RoutedEvent="Loaded">
                <BeginStoryboard>
                    <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                         From="1.0" To="0.4" Duration="0:0:1.5"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>
