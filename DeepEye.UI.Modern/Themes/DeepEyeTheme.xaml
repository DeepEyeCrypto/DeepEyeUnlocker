<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:DeepEye.UI.Modern.Infrastructure.Controls">

    <!-- Colors -->
    <Color x:Key="DeepEye.Color.Obsidian">#990D1117</Color>
    <Color x:Key="DeepEye.Color.Grey.Deep">#AA161B22</Color>
    <Color x:Key="DeepEye.Color.Cyan">#00F2FF</Color>
    <Color x:Key="DeepEye.Color.Cyan.Dim">#8000F2FF</Color>
    <Color x:Key="DeepEye.Color.Orange">#FF8C00</Color>
    <Color x:Key="DeepEye.Color.White">#F0F6FC</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="DeepEye.Brush.Obsidian" Color="{StaticResource DeepEye.Color.Obsidian}" />
    <SolidColorBrush x:Key="DeepEye.Brush.Grey.Deep" Color="{StaticResource DeepEye.Color.Grey.Deep}" />
    <SolidColorBrush x:Key="DeepEye.Brush.Cyan" Color="{StaticResource DeepEye.Color.Cyan}" />
    <SolidColorBrush x:Key="DeepEye.Brush.Orange" Color="{StaticResource DeepEye.Color.Orange}" />
    <SolidColorBrush x:Key="DeepEye.Brush.White" Color="{StaticResource DeepEye.Color.White}" />

    <LinearGradientBrush x:Key="DeepEye.Brush.GlassGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#20FFFFFF" Offset="0" />
        <GradientStop Color="#05FFFFFF" Offset="1" />
    </LinearGradientBrush>

    <!-- Noise Texture Overlay (Simulated via Gradient) -->
    <RadialGradientBrush x:Key="DeepEye.Brush.NoiseOverlay" Opacity="0.03">
        <GradientStop Color="White" Offset="0" />
        <GradientStop Color="Transparent" Offset="0.1" />
        <RadialGradientBrush.RelativeTransform>
            <TransformGroup>
                <ScaleTransform ScaleX="0.01" ScaleY="0.01" />
            </TransformGroup>
        </RadialGradientBrush.RelativeTransform>
    </RadialGradientBrush>

    <!-- Fonts -->
    <FontFamily x:Key="DeepEye.Font.Main">Segoe UI Semibold, Inter, Roboto</FontFamily>
    <FontFamily x:Key="DeepEye.Font.Mono">Consolas, Fira Code</FontFamily>

    <!-- Base Styles -->
    <Style x:Key="DeepEye.Text.Title" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource DeepEye.Brush.White}" />
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Margin" Value="0,0,0,10" />
    </Style>

    <Style x:Key="DeepEye.Text.Label" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource DeepEye.Brush.Cyan}" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Opacity" Value="0.8" />
    </Style>

    <!-- Modern Button -->
    <Style x:Key="DeepEye.Button.Modern" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource DeepEye.Brush.GlassGradient}" />
        <Setter Property="Foreground" Value="{StaticResource DeepEye.Brush.White}" />
        <Setter Property="Padding" Value="15,8" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BorderBrush" Value="{StaticResource DeepEye.Brush.Cyan}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Border" Background="Transparent"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetName="Border" 
                                                        Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                        To="#3000F2FF" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetName="Border" 
                                                        Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                        To="Transparent" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Hazard Button -->
    <Style x:Key="DeepEye.Button.Hazard" TargetType="Button" BasedOn="{StaticResource DeepEye.Button.Modern}">
        <Setter Property="Background" Value="{StaticResource DeepEye.Brush.Orange}" />
        <Setter Property="Foreground" Value="Black" />
        <Setter Property="BorderBrush" Value="#40000000" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="0">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Opacity" Value="0.9" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Opacity" Value="0.7" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Breathing Glow Style -->
    <Style x:Key="DeepEye.Text.GlowingTitle" TargetType="TextBlock" BasedOn="{StaticResource DeepEye.Text.Title}">
        <Style.Triggers>
            <EventTrigger RoutedEvent="Loaded">
                <BeginStoryboard>
                    <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                         From="1.0" To="0.4" Duration="0:0:1.5"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Style.Triggers>
    </Style>

    <!-- Generic Animated Content Style -->
    <Style x:Key="DeepEye.Style.AnimatedContent" TargetType="ContentControl">
        <Style.Triggers>
            <EventTrigger RoutedEvent="Loaded">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                         From="0" To="1" Duration="0:0:0.4"/>
                        <ThicknessAnimation Storyboard.TargetProperty="Margin"
                                            From="0,20,0,-20" To="0" Duration="0:0:0.4">
                            <ThicknessAnimation.EasingFunction>
                                <PowerEase Power="3" EasingMode="EaseOut"/>
                            </ThicknessAnimation.EasingFunction>
                        </ThicknessAnimation>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="UserControl">
        <Style.Triggers>
            <EventTrigger RoutedEvent="Loaded">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                         From="0" To="1" Duration="0:0:0.5"/>
                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                                         From="40" To="0" Duration="0:0:0.6">
                            <DoubleAnimation.EasingFunction>
                                <SineEase EasingMode="EaseOut"/>
                            </DoubleAnimation.EasingFunction>
                        </DoubleAnimation>
                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                         From="10" To="0" Duration="0:0:0.5">
                            <DoubleAnimation.EasingFunction>
                                <SineEase EasingMode="EaseOut"/>
                            </DoubleAnimation.EasingFunction>
                        </DoubleAnimation>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Style.Triggers>
        <Setter Property="RenderTransform">
            <Setter.Value>
                <TranslateTransform X="0" Y="0"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Circular Progress Ring Style -->
    <Style TargetType="{x:Type controls:CircularProgressBar}">
        <Setter Property="Width" Value="100"/>
        <Setter Property="Height" Value="100"/>
        <Setter Property="Foreground" Value="{StaticResource DeepEye.Brush.Cyan}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:CircularProgressBar}">
                    <Grid x:Name="TemplateRoot">
                        <Ellipse Stroke="#10FFFFFF" StrokeThickness="4" />
                        <Path x:Name="PART_Indicator" Stroke="{TemplateBinding Foreground}" StrokeThickness="4" 
                              StrokeEndLineCap="Round" StrokeStartLineCap="Round">
                            <Path.Data>
                                <PathGeometry>
                                    <PathFigure StartPoint="50,0">
                                        <ArcSegment x:Name="Arc" Size="50,50" IsLargeArc="False" SweepDirection="Clockwise" Point="49.99,0"/>
                                    </PathFigure>
                                </PathGeometry>
                            </Path.Data>
                        </Path>
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="{TemplateBinding Value, StringFormat={}{0:0}%}" 
                                       Foreground="{TemplateBinding Foreground}" FontSize="18" FontWeight="Bold" 
                                       HorizontalAlignment="Center"/>
                             <TextBlock Text="PROGRESS" Foreground="{StaticResource DeepEye.Brush.White}" 
                                       FontSize="8" Opacity="0.5" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
