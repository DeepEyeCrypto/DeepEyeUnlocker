<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Brand Tab Style -->
    <style name="BrandTab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginHorizontal">2dp</item>
        <item name="android:background">@drawable/brand_tab_unselected</item>
    </style>

    <style name="BrandTabSmall">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#AAAAAA</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_marginHorizontal">2dp</item>
        <item name="android:background">@drawable/brand_tab_unselected</item>
    </style>

    <!-- Mode Tab Style -->
    <style name="ModeTab">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#888888</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <!-- Operation Button Styles -->
    <style name="OperationButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:background">@drawable/operation_btn_normal</item>
    </style>

    <style name="OperationButtonOrange">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textColor">#0D0D0F</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:background">@drawable/operation_btn_orange</item>
    </style>

    <style name="OperationButtonDanger">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:background">@drawable/operation_btn_danger</item>
    </style>
</resources>
