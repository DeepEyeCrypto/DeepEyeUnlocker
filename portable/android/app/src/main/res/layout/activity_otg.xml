<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/deepeye_obsidian">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- 1. Header Bar -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/deepeye_grey_deep"
            android:paddingHorizontal="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DEEPEYE"
                    android:textColor="@color/deepeye_cyan"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.1" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PRO"
                    android:textColor="@color/deepeye_orange"
                    android:textSize="10sp"
                    android:layout_marginStart="4dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:id="@+id/connectionGlow"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/glow_indicator" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- 2. Status Dashboard -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp">
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/glass_card"
                        android:padding="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/statusLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SYSTEM STATUS"
                            android:textColor="@color/deepeye_cyan"
                            android:textSize="10sp"
                            android:letterSpacing="0.2"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/statusText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="WAITING FOR HARDWARE..."
                            android:textColor="@color/deepeye_white"
                            android:textSize="18sp"
                            android:layout_marginTop="4dp"
                            android:textStyle="bold" />

                        <ProgressBar
                            android:id="@+id/globalProgress"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:layout_marginTop="16dp"
                            android:progress="0"
                            android:progressTint="@color/deepeye_cyan"
                            android:backgroundTint="#20FFFFFF" />
                    </LinearLayout>
                </FrameLayout>

                <!-- 3. Primary Action -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/connectButton"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:text="INITIALIZE OTG LINK"
                    android:textColor="@color/deepeye_obsidian"
                    app:backgroundTint="@color/deepeye_cyan"
                    app:cornerRadius="12dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="32dp" />

                <!-- 4. Partition Manager Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PARTITION ORCHESTRATOR"
                    android:textColor="@color/deepeye_cyan"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.1"
                    android:layout_marginBottom="12dp" />

                <ListView
                    android:id="@+id/partitionList"
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:background="@drawable/glass_card"
                    android:padding="2dp"
                    android:divider="#1A00F2FF"
                    android:dividerHeight="0.5dp"
                    android:layout_marginBottom="24dp" />

                <!-- 5. Operation Cluster -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/dumpButton"
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:text="BACKUP"
                        android:textColor="@color/deepeye_white"
                        app:backgroundTint="@color/deepeye_grey_deep"
                        app:cornerRadius="8dp"
                        android:enabled="false"
                        android:layout_marginEnd="6dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/flashButton"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:text="FLASH GSI"
                        android:textColor="@color/deepeye_obsidian"
                        app:backgroundTint="@color/deepeye_orange"
                        app:cornerRadius="8dp"
                        android:enabled="false"
                        android:layout_marginStart="6dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SENTINEL PRO ENGINE v4.2.0"
                    android:textColor="@color/deepeye_white"
                    android:gravity="center"
                    android:textSize="9sp"
                    android:alpha="0.3"
                    android:layout_marginTop="32dp" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
