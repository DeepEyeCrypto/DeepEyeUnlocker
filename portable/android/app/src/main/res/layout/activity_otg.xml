<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/deepeye_obsidian">

    <!-- Main Content -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Header Bar -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:background="@color/deepeye_grey_deep"
                    android:paddingHorizontal="16dp"
                    android:elevation="8dp">

                    <ImageView
                        android:id="@+id/menuButton"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:src="@android:drawable/ic_menu_sort_by_size"
                        android:padding="8dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        app:tint="@color/deepeye_white" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DEEP"
                            android:textColor="@color/deepeye_white"
                            android:textSize="22sp"
                            android:textStyle="bold" />
                            
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="EYE"
                            android:textColor="@color/deepeye_cyan"
                            android:textSize="22sp"
                            android:textStyle="bold" />
                            
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" PRO"
                            android:textColor="@color/deepeye_orange"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:background="@drawable/badge_pro"
                            android:paddingHorizontal="6dp"
                            android:paddingVertical="2dp"
                            android:layout_marginStart="6dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        
                        <TextView
                            android:id="@+id/connectionStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="OFFLINE"
                            android:textColor="@color/deepeye_error"
                            android:textSize="10sp"
                            android:textStyle="bold" />
                            
                        <View
                            android:id="@+id/connectionGlow"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginStart="6dp"
                            android:background="@drawable/glow_indicator_offline" />
                    </LinearLayout>
                </RelativeLayout>

                <!-- Protocol Tabs -->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:background="@color/deepeye_grey_deep"
                    android:paddingVertical="8dp">

                    <LinearLayout
                        android:id="@+id/protocolTabs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingHorizontal="12dp">

                        <TextView
                            android:id="@+id/tabMtk"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="MTK BROM"
                            android:textColor="@color/deepeye_obsidian"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:paddingHorizontal="16dp"
                            android:background="@drawable/tab_selected"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/tabQualcomm"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="QUALCOMM EDL"
                            android:textColor="@color/deepeye_white"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:paddingHorizontal="16dp"
                            android:background="@drawable/tab_unselected"
                            android:layout_marginEnd="8dp"
                            android:alpha="0.7" />

                        <TextView
                            android:id="@+id/tabSamsung"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="SAMSUNG"
                            android:textColor="@color/deepeye_white"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:paddingHorizontal="16dp"
                            android:background="@drawable/tab_unselected"
                            android:layout_marginEnd="8dp"
                            android:alpha="0.7" />

                        <TextView
                            android:id="@+id/tabAdb"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="ADB/FASTBOOT"
                            android:textColor="@color/deepeye_white"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:paddingHorizontal="16dp"
                            android:background="@drawable/tab_unselected"
                            android:alpha="0.7" />
                    </LinearLayout>
                </HorizontalScrollView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Device Info Card -->
                    <LinearLayout
                        android:id="@+id/deviceInfoCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/glass_card"
                        android:padding="16dp"
                        android:layout_marginBottom="16dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“± DEVICE INFORMATION"
                            android:textColor="@color/deepeye_cyan"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.1"
                            android:layout_marginBottom="12dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="MODEL"
                                    android:textColor="@color/deepeye_white"
                                    android:alpha="0.5"
                                    android:textSize="10sp" />
                                <TextView
                                    android:id="@+id/deviceModel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Unknown"
                                    android:textColor="@color/deepeye_white"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="CHIPSET"
                                    android:textColor="@color/deepeye_white"
                                    android:alpha="0.5"
                                    android:textSize="10sp" />
                                <TextView
                                    android:id="@+id/deviceChipset"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Unknown"
                                    android:textColor="@color/deepeye_cyan"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/deepeye_cyan"
                            android:alpha="0.2"
                            android:layout_marginVertical="12dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="PROTOCOL"
                                    android:textColor="@color/deepeye_white"
                                    android:alpha="0.5"
                                    android:textSize="10sp" />
                                <TextView
                                    android:id="@+id/deviceProtocol"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="MTK BROM"
                                    android:textColor="@color/deepeye_success"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="SECURE BOOT"
                                    android:textColor="@color/deepeye_white"
                                    android:alpha="0.5"
                                    android:textSize="10sp" />
                                <TextView
                                    android:id="@+id/deviceSecureBoot"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="DISABLED"
                                    android:textColor="@color/deepeye_success"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- System Status Card -->
                    <LinearLayout
                        android:id="@+id/statusCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/glass_card"
                        android:padding="16dp"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="âš¡ SYSTEM STATUS"
                            android:textColor="@color/deepeye_orange"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.1"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/statusText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="READY FOR CONNECTION"
                            android:textColor="@color/deepeye_white"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/statusSubtext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Connect device via OTG cable"
                            android:textColor="@color/deepeye_white"
                            android:alpha="0.6"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp" />

                        <ProgressBar
                            android:id="@+id/globalProgress"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:layout_marginTop="12dp"
                            android:progressTint="@color/deepeye_cyan"
                            android:progressBackgroundTint="@color/deepeye_grey_deep"
                            android:progress="0" />
                    </LinearLayout>

                    <!-- Connect Button -->
                    <Button
                        android:id="@+id/connectButton"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="âš¡ INITIALIZE OTG LINK"
                        android:textColor="@color/deepeye_obsidian"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:background="@drawable/button_primary"
                        android:layout_marginBottom="16dp" />

                    <!-- Quick Actions Grid -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ”§ QUICK ACTIONS"
                        android:textColor="@color/deepeye_cyan"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.1"
                        android:layout_marginBottom="12dp" />

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="2"
                        android:rowCount="3"
                        android:layout_marginBottom="16dp">

                        <LinearLayout
                            android:id="@+id/actionReadInfo"
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/action_card"
                            android:padding="12dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ“‹"
                                android:textSize="24sp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Read Info"
                                android:textColor="@color/deepeye_white"
                                android:textSize="12sp"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/actionUnlockBl"
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/action_card"
                            android:padding="12dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ”“"
                                android:textSize="24sp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Unlock BL"
                                android:textColor="@color/deepeye_white"
                                android:textSize="12sp"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/actionRemovePattern"
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/action_card"
                            android:padding="12dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ”‘"
                                android:textSize="24sp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Remove PIN"
                                android:textColor="@color/deepeye_white"
                                android:textSize="12sp"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/actionImeiRepair"
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/action_card"
                            android:padding="12dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ“¡"
                                android:textSize="24sp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="IMEI Repair"
                                android:textColor="@color/deepeye_white"
                                android:textSize="12sp"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/actionFormat"
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/action_card_danger"
                            android:padding="12dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ—‘ï¸"
                                android:textSize="24sp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Format"
                                android:textColor="@color/deepeye_error"
                                android:textSize="12sp"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/actionReboot"
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/action_card"
                            android:padding="12dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ”„"
                                android:textSize="24sp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Reboot"
                                android:textColor="@color/deepeye_white"
                                android:textSize="12sp"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>
                    </GridLayout>

                    <!-- Partition Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ðŸ’¾ PARTITION ORCHESTRATOR"
                            android:textColor="@color/deepeye_cyan"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.1" />

                        <TextView
                            android:id="@+id/partitionCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 partitions"
                            android:textColor="@color/deepeye_white"
                            android:alpha="0.5"
                            android:textSize="11sp" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/partitionList"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="@drawable/glass_card"
                        android:padding="8dp"
                        android:clipToPadding="false"
                        android:layout_marginBottom="16dp" />

                    <!-- Main Action Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <Button
                            android:id="@+id/dumpButton"
                            android:layout_width="0dp"
                            android:layout_height="52dp"
                            android:layout_weight="1"
                            android:text="ðŸ“¦ BACKUP"
                            android:textColor="@color/deepeye_white"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:background="@drawable/button_secondary"
                            android:layout_marginEnd="8dp"
                            android:enabled="false" />

                        <Button
                            android:id="@+id/flashButton"
                            android:layout_width="0dp"
                            android:layout_height="52dp"
                            android:layout_weight="1"
                            android:text="ðŸ”¥ FLASH"
                            android:textColor="@color/deepeye_obsidian"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:background="@drawable/button_orange"
                            android:enabled="false" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/frpButton"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:text="ðŸ” FRP BYPASS ENGINE"
                        android:textColor="@color/deepeye_warning"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:background="@drawable/button_outline"
                        android:layout_marginBottom="16dp"
                        android:enabled="false" />

                    <!-- Live Logs Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ðŸ“œ LIVE LOGS"
                            android:textColor="@color/deepeye_cyan"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.1" />

                        <TextView
                            android:id="@+id/clearLogs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CLEAR"
                            android:textColor="@color/deepeye_error"
                            android:textSize="10sp"
                            android:padding="8dp"
                            android:background="?attr/selectableItemBackground" />
                    </LinearLayout>

                    <ScrollView
                        android:id="@+id/logScrollView"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="@drawable/terminal_bg"
                        android:padding="12dp"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:id="@+id/logText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="[SYSTEM] DeepEye Pro v4.2.0 initialized\n[SYSTEM] Waiting for device connection...\n[INFO] Supported: MTK BROM, QC EDL, Samsung, ADB"
                            android:textColor="@color/deepeye_success"
                            android:textSize="11sp"
                            android:fontFamily="monospace"
                            android:lineSpacingExtra="4dp" />
                    </ScrollView>

                    <!-- Footer -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginBottom="24dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SENTINEL PRO ENGINE v4.2.0"
                            android:textColor="@color/deepeye_white"
                            android:alpha="0.4"
                            android:textSize="10sp"
                            android:letterSpacing="0.15" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DeepEyeCrypto Â© 2026"
                            android:textColor="@color/deepeye_white"
                            android:alpha="0.3"
                            android:textSize="9sp"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navView"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/deepeye_grey_deep"
        app:itemTextColor="@color/deepeye_white"
        app:itemIconTint="@color/deepeye_cyan"
        app:menu="@menu/drawer_menu" />

</androidx.drawerlayout.widget.DrawerLayout>
