<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="?attr/selectableItemBackground"
    android:gravity="center_vertical">

    <!-- Partition Icon -->
    <View
        android:layout_width="8dp"
        android:layout_height="40dp"
        android:background="@color/deepeye_cyan" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="16dp">

        <TextView
            android:id="@+id/partitionName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="boot"
            android:textColor="@color/deepeye_white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/partitionType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="System Partition"
            android:textColor="@color/deepeye_white"
            android:alpha="0.5"
            android:textSize="12sp"
            android:layout_marginTop="2dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/partitionSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="64 MB"
        android:textColor="@color/deepeye_cyan"
        android:textSize="14sp"
        android:textStyle="bold" />

</LinearLayout>
